<div c-id="modal-cart" class="modal fade modal-cart">
    <div class="modal-dialog modal-fullscreen" >
        <div class="modal-content">
            <div class="modal-body">
                <div class="row my-3">
                    <div class="col-10">
                        <p class="items">
                            {{idioma.cart.title}} <i class="bi bi-dot"></i><span c-id="number-things">0</span>
                        </p>
                    </div>
                    <div class="col-2">
                        <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="col-12" >

                        <div  c-id="model-cart" class="col-12 model-cart mt-1 none">
                            <div class="row">
                                <div class="col-3">
                                    <img class="img-fluid">
                                </div>
                                <div class="col-8">
                                    <p class="title-item"><b c-id="title-item"></b></p>
                                    <div c-id="variants-item-cart"></div>
                                </div>
                                <div class="col-1">
                                    <i c-id="remove-cart" class="bi bi-trash-fill"></i>
                                </div>
                                <div style="margin-top: -1rem;" class="col-12">
                                    <div class="float-end">
                                        <div>
                                             <label  class="last-price me-2"><span c-id="last-price-item"> </span> {{moeda}}</label>
                                           
                                            <label  class="price"> <b> <span c-id="price-item"> </span> {{moeda}}</b></label>
                                        </div>
                                            <div>
                                                <label  class="save float-end"> <span c-id="save"></span> {{moeda}})</label>
                                            </div>
                                    </div>
                                    
                                </div>
                            </div>
                            <hr>
                        </div>

                        <div c-id="all-items" class="row">
                            
                        </div>
                    </div>
                    
                </div>
            </div>
         <div class="modal-footer" >
         
            <div style="width:100%;" class="d-flex justify-content-center">
                <div  class="spinner-border none" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        
            <button style="color:{{color_btn_checkout}}; background-color:{{bk_btn_checkout}};border-color:{{bk_btn_checkout}}" c-id="btn-checkout" class="btn col-12 btn-buy mt-3">
                {{idioma.cart.btn_checkout}}  <span></span> {{moeda}}
            </button>
            <button style="padding: 12px;font-size: 1.1rem;font-weight: 700;color:{{color_btn_add_items}}; background-color:{{bk_btn_add_items}};border-color:{{bk_btn_add_items}}" data-bs-dismiss="modal" aria-label="Close" class="btn col-12  mt-2">
                {{idioma.cart.btn_add_items}} 
            </button>
        </div>    
        </div>
        
    </div>
</div>