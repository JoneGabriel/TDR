<div class="mx-5 mt-5 mb-4">
    <div class="d-flex justify-content-between">
        <h5>White list <i class="bi bi-pc-display-horizontal"></i></h5>
        <button c-id="new-ip" class="btn-add-product">Adicionar ip</button>
    </div>
    
    <div class="my-table mt-3">
        <div class="row mx-1 p-1">
            <div class="col-lg-4">
                <label class="mt-1"><b>Ip</b></label>
            </div>
            <div class="col-lg-4">
                <label class="mt-1"><b>Data de Cadastro</b></label>
            </div>
            <div class="col-lg-4">
                <label class="mt-1"><b></b></label>
            </div>
        </div>

        <div c-id="model-ip" id="" class="col-lg-12 none">
            <div  class="row model-table p-2">
                <div class="col-lg-4">
                    
                    <a c-id="ip" class="ms-2"></a>
                </div>
                <div class="col-lg-4">
                    <a c-id="createdAt" class="ms-2"></a>
                </div>
                <div class="col-lg-4">
                   
                </div>
            </div>
        </div>

        <div c-id="all-ip" class="row">
            {% for ip in ips %}

                <div c-id="model-ip" id="{{colecao._id}}" class="col-lg-12">
                    <div  class="row model-table p-2">
                        <div class="col-lg-4">
                            <a class="ms-2">{{ip.ip}}</a>
                        </div>
                        <div class="col-lg-4">
                            <a c-id="createdAt" class="ms-2">{{ip.createdAt}}</a>
                        </div>
                        <div class="col-lg-4">
                        </div>
                    </div>
                </div>

                            
            {% endfor %}
        </div>
    </div>
    
</div>


<div c-id="modal-ip" class="modal fade modal-product-style"  tabindex="-1"   aria-modal="true" role="dialog">
  <div class="modal-dialog">
    <div c-id="form" class="modal-content bk-modal">
      <div class="modal-header rm-border">
         <button c-id="close-modal" class="btn-modal">Fechar</button>
      </div>
      <div class="modal-body">
        <div class="container">
            <div class="row form-default">
                <div class="col-lg-6">
                    <div class="mb-3">
                        <label class="form-label">Ip</label>
                        <input c-id="ip" type="text" class="form-control"  placeholder="177.55.228.202">
                    </div>
                   
                </div>

            

            </div>
            <button c-id="save-ip" class="btn-modal mt-4 float-end">Salvar</button>
            <div class="clearfix">
                <div c-id="loading-btn" class="spinner-border float-end mt-4 none" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <br>
            <br>
            <br>

        </div>
      </div>
      
    </div>
  </div>
</div>